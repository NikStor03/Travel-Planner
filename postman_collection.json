{
  "info": { "name": "Travel Projects API", "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json" },
  "item": [
    {
      "name": "Create Project",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": { "raw": "http://0.0.0.0:8000/projects", "protocol": "http", "host": ["0.0.0.0"], "port": "8000", "path": ["projects"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Ukranian Art Trip\",\n  \"description\": \"Weekend plan\",\n  \"start_date\": \"2026-02-15\",\n  \"places\": [\n    {\"external_id\": 27992, \"notes\": \"Must see\"}\n  ]\n}"
        }
      }
    },
    {
      "name": "List Projects",
      "request": { "method": "GET", "url": "http://0.0.0.0:8000/projects?limit=20&offset=0" }
    },
    {
      "name": "Get Project",
      "request": { "method": "GET", "url": "http://0.0.0.0:8000/projects/1" }
    },
    {
      "name": "Update Project",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://0.0.0.0:8000/projects/1",
        "body": { "mode": "raw", "raw": "{\n  \"description\": \"Updated desc\"\n}" }
      }
    },
    {
      "name": "Add Place to Project",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://0.0.0.0:8000/projects/1/places",
        "body": { "mode": "raw", "raw": "{\n  \"external_id\": 87165,\n  \"notes\": \"Add later\"\n}" }
      }
    },
    {
      "name": "List Places",
      "request": { "method": "GET", "url": "http://0.0.0.0:8000/projects/1/places" }
    },
    {
      "name": "Update Place (notes + visited)",
      "request": {
        "method": "PATCH",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": "http://0.0.0.0:8000/projects/1/places/1",
        "body": { "mode": "raw", "raw": "{\n  \"notes\": \"Saw it!\",\n  \"visited\": true\n}" }
      }
    },
    {
      "name": "Delete Project",
      "request": { "method": "DELETE", "url": "http://0.0.0.0:8000/projects/1" }
    }
  ]
}
